<h1>Events</h1>

<h2>Previous events</h2>
<table>
  <thead>
    <tr>
      <th>Description</th>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @past.each do |event| %>
      <tr>
        <td><%= event.description %></td>
        <td><%= event.date %></td>  
        <td><%= link_to "Details", event %></td> 
      </tr>
    <% end %>
  </tbody>
</table>

<h2>Upcoming events</h2>
<table>
  <thead>
    <tr>
      <th>Description</th>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @upcoming.each do |event| %>
      <tr>
        <td><%= event.description %></td>
        <td><%= event.date %></td>  
        <td><%= link_to "Details", event %></td>
        <td><%= link_to "Attend", eventattendings_path(event.id), method: :post %></td>
      </tr>
    <% end %>
  </tbody>
</table>
